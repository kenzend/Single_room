<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Playlist_1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<!--There are a couple classes I created because the html code refuesed to let me edit fields directly.-->
<!---They are: primary_color, main_navbar, site_text_color, and box_color.-->
<body>
    <header>
        <nav class="main_navbar navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand site_text_color" asp-area="" asp-controller="Home" asp-action="Index">Online Playlist Application</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse site_text_color">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link site_text_color" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link site_text_color" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link site_text_color" asp-area="" asp-controller="Room" asp-action="Index">Temporary Room Page Link</a>
                        </li>
                    </ul>
                </div>
                <nav class="navbar navbar-expand-sm">
                    <ul class="navbar-nav ml-auto site_text_color">
                        <partial name="_LoginPartial" />
                    </ul>
                </nav>
            </div>
        </nav>
    </header>
    <div class="container box_color">
        <main role="main" class="pb-3 site_text_color">
            @RenderBody()
        </main>
    </div>

    <footer class="main_navbar border-top footer text-muted">
        <div class="container site_text_color">
            &copy; 2020 - Playlist_1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
